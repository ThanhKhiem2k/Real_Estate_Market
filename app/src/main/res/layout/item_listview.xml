<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewMain"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_margin="5sp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icons8availableupdates64" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNameProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Đang load dữ liệu..." />

        <TextView
            android:id="@+id/textViewPriceItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:textColor="#CD0E45" />

        <TextView
            android:id="@+id/textViewPNumberItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:textColor="#676CFF" />
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>